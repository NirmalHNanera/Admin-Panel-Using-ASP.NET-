@{
    ViewData["Title"] = (Model.StateID > 0 ? "Edit" : "Add") + " State ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AdminPanel.Areas.LOC_State.Models.LOC_StateModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">@ViewData["Title"]</h2>
                    <form method="post" asp-controller="LOC_State" asp-action="LOC_StateSave" asp-area="LOC_State">
                        <div class="mb-3">
                            <label for="StateName" class="form-label">State Name</label>
                            <input type="text" value="@Model.StateName" asp-for="StateName" class="form-control" id="StateName">
                            <span asp-validation-for="StateName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="StateCode" class="form-label">State Code</label>
                            <input type="text" value="@Model.StateCode" asp-for="StateCode" class="form-control" id="StateCode">
                            <span asp-validation-for="StateCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CountryID" class="form-label">Country Name</label>
                            <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList, "CountryID", "CountryName"))">
                                <option value="">Select Country</option>
                            </select>
                            <span asp-validation-for="CountryID" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 col-6 mx-auto">
                            <input type="hidden" name="StateID" value="@Model.StateID" />
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
