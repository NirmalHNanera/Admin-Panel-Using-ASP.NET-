<div class="w-200">
    <!-- begin logo -->
    <div class="logo">
        <h2 class="bold text-danger text-center">Address Book</h2>
    </div>
    <!-- end logo -->
    <!-- begin login -->
    <div class="content border border-5 border-danger">
        <!-- begin login form -->
        <form class="login-form" method="post" asp-controller="Account" asp-action="login">
            <h3 class="form-title font-green">sign in</h3>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="text-danger">@TempData["ErrorMessage"]</div>
            }

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">UserName</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="search" asp-for="Username" placeholder="enter username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <div class="password-input">
                    <input class="form-control form-control-solid placeholder-no-fix" type="password" asp-for="Password" placeholder="Enter password" />
                    <input type="checkbox" class="toggle-password" id="togglePassword" onclick="togglePasswordVisibility()">
                    <label for="togglePassword" class="checkbox-label"></label>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="form-actions text-center">
                <button type="submit" class="btn green uppercase">login</button>
            </div>
        </form>
        <!-- end login form -->
    </div>
</div>

@section scripts {
    @{
        await Html.RenderPartialAsync("_validationscriptspartial");
    }

    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.querySelector(".password-input input");
            var toggleCheckbox = document.querySelector(".toggle-password");

            if (toggleCheckbox.checked) {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }


    </script>


}
